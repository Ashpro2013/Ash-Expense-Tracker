@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<div class="auth-shell">
    <div class="auth-hero">
        <div class="auth-hero-content">
            <MudText Typo="Typo.h2" Class="hero-title">Make every riyal count.</MudText>
            <MudText Typo="Typo.subtitle1" Class="hero-subtitle">
                Track income, control expenses, and build a clear path to your goals.
            </MudText>
            <div class="hero-badges">
                <MudChip T="string" Variant="Variant.Outlined" Color="Color.Secondary">Smart categories</MudChip>
                <MudChip T="string" Variant="Variant.Outlined" Color="Color.Secondary">Monthly insights</MudChip>
                <MudChip T="string" Variant="Variant.Outlined" Color="Color.Secondary">Secure access</MudChip>
            </div>
        </div>
    </div>
    <div class="auth-panel">
        @Body
    </div>
</div>

@code {
    private readonly MudTheme _theme = ExpenseIncomeTracker.Web.Theme.AppTheme.Create();
}
