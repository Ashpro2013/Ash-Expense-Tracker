@inject ICategoryService CategoryService
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="page-title">
    <div>
        <MudText Typo="Typo.h4">@Title</MudText>
        <MudText Typo="Typo.subtitle2" Class="page-subtitle">@Subtitle</MudText>
    </div>
</div>

<MudGrid>
    <MudItem xs="12" md="4">
        <MudPaper Class="pa-4">
            <MudText Typo="Typo.h6">@(_form.Id == 0 ? "Add category" : "Edit category")</MudText>
            <MudDivider Class="my-2" />

            <EditForm Model="_form" OnValidSubmit="SaveCategory" formname="category-form">
                <DataAnnotationsValidator />
                <MudTextField @bind-Value="_form.Name" Label="Category name" Variant="Variant.Outlined" FullWidth="true" />

                @if (!string.IsNullOrWhiteSpace(_error))
                {
                    <MudAlert Severity="Severity.Error" Variant="Variant.Outlined" Class="mt-3">@_error</MudAlert>
                }

                <MudButton ButtonType="ButtonType.Submit" Color="Color.Primary" Variant="Variant.Filled" FullWidth="true" Class="mt-4">
                    Save
                </MudButton>
                @if (_form.Id != 0)
                {
                    <MudButton Variant="Variant.Text" Color="Color.Secondary" OnClick="ResetForm" FullWidth="true" Class="mt-2">
                        Cancel edit
                    </MudButton>
                }
            </EditForm>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" md="8">
        <MudPaper Class="pa-4">
            <MudText Typo="Typo.h6">Saved categories</MudText>
            <MudTable Items="_categories" Dense="true" Hover="true" Class="mt-3">
                <HeaderContent>
                    <MudTh>Name</MudTh>
                    <MudTh></MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd>@context.Name</MudTd>
                    <MudTd align="right">
                        <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" OnClick="@(() => EditCategory(context))" />
                        <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" OnClick="@(() => DeleteCategory(context.Id))" />
                    </MudTd>
                </RowTemplate>
                <NoRecordsContent>
                    <MudText>No categories yet.</MudText>
                </NoRecordsContent>
            </MudTable>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    [Parameter] public CategoryType Type { get; set; }
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Subtitle { get; set; } = string.Empty;

    private string _userId = string.Empty;
    private readonly List<Category> _categories = new();
    private CategoryForm _form = new();
    private string? _error;

    protected override async Task OnInitializedAsync()
    {
        _userId = await GetUserIdAsync();
        await LoadCategories();
    }

    private async Task LoadCategories()
    {
        _categories.Clear();
        _categories.AddRange(await CategoryService.GetByTypeAsync(_userId, Type));
    }

    private async Task SaveCategory()
    {
        _error = null;

        try
        {
            if (_form.Id == 0)
            {
                await CategoryService.CreateAsync(new Category
                {
                    Name = _form.Name.Trim(),
                    Type = Type,
                    UserId = _userId
                });
            }
            else
            {
                await CategoryService.UpdateAsync(new Category
                {
                    Id = _form.Id,
                    Name = _form.Name.Trim(),
                    Type = Type,
                    UserId = _userId
                });
            }
        }
        catch (Exception)
        {
            _error = "Category name already exists.";
            return;
        }

        ResetForm();
        await LoadCategories();
    }

    private void EditCategory(Category category)
    {
        _form = new CategoryForm
        {
            Id = category.Id,
            Name = category.Name
        };
    }

    private async Task DeleteCategory(int id)
    {
        _error = null;

        try
        {
            await CategoryService.DeleteAsync(id, _userId);
            await LoadCategories();
        }
        catch (Exception)
        {
            _error = "Cannot delete a category that has transactions.";
        }
    }

    private void ResetForm()
    {
        _form = new CategoryForm();
        _error = null;
    }

    private async Task<string> GetUserIdAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        return authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? string.Empty;
    }

    private sealed class CategoryForm
    {
        public int Id { get; set; }

        [Required]
        [MinLength(2)]
        public string Name { get; set; } = string.Empty;
    }
}
